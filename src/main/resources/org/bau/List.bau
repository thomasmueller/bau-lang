module org.bau.List

# List
type List(T)
    array T[]
    size int

# Create a new list
fun newList(T type) List(T)
    result : new(List(T))
    result.array = new(T[], 4)
    result.size = 0
    return result

# Add an entry to the list
fun List(T) add(x T)
    if size >= array.len
        n : new(T[], array.len * 2)
        for i := until(array.len)
            n[i] = array[i]
        array = n
    array[size] = x
    size += 1

fun List(T) get(x int) T
    return array[x]
