import org.bau.Exception
    exception

fun divisionByZeroThrow(sum int, count int) int throws exception
    if count = 0
        throw exception('Can not get the average with count 0')
    z : sum / count
    println('throw: ' z)
    return z

fun divisionByZeroContinue()
    y := -1
    loop y < 2
        y += 1
        if y = 0
            continue
        z := 10 / y
        println('cont: ' z)

fun divisionByZeroContinue2()
    y := -1
    loop y < 2
        y += 1
        continue y = 0
        z := 10 / y
        println('cont2: ' z)

fun divisionByZeroBreak()
    y := -1
    loop y < 2
        y += 1
        if y = 0
            break
        z := 10 / y
        println('break: ' z)

fun divisionByZeroBreak2()
    y := -1
    loop y < 2
        y += 1
        break y = 0
        z := 10 / y
        println('break2: ' z)

fun divisionByZeroReturn()
    y := -1
    loop y < 2
        y += 1
        if y = 0
            return
        z := 10 / y
        println('ret: ' z)

fun main()
    divisionByZeroContinue()
    divisionByZeroContinue2()
    divisionByZeroBreak()
    divisionByZeroBreak2()
    divisionByZeroReturn()
    divisionByZeroThrow(10, 0)
    catch exception
        println('div by zero caught')
    divisionByZeroThrow(10, 1)
    catch exception
        println('div by non-zero?')

