import org.bau.Utils

fun shellSort(a T[])
    h := 16
    loop a.len > h / 16
        h = h + h + h / 4 + 16
    loop h > 15
        h = (h - 16) / 9 * 4
        g : (h + 15) / 16
        for i := range(g, a.len)
            t : a[i]
            j := i - g
            loop j >= 0 and a[j] > t
                a[j + g] = a[j]
                j -= g
            a[j + g] = t

fun insertionSort(a T[])
    for i := range(1, a.len)
        t := a[i]
        j := i - 1
        loop j >= 0 and a[j] > t
            a[j + 1] = a[j]
            j -= 1
        a[j + 1] = t

fun test()
    x : int[5]
    for i := until(x.len)
        x[i] = Utils.random()
    insertionSort(x)
    for i := until(x.len)
        println(x[i])
    for i := until(x.len)
        x[i] = Utils.random()
    shellSort(x)
    for i := until(x.len)
        println(x[i])

test()

