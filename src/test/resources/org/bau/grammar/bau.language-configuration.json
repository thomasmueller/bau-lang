{
  "comments": {
    "lineComment": "#",
    "blockComment": ["##\n", "##"]
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "autoCloseBefore": ".,<>!=]) \n",
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "onEnterRules": [
		{
			"beforeText": "^\\s*(?:if|elif|else|for|while|catch|fun|type|import|and|or|not|\\.|\\(|\\,).*?\\s*$",
			"action": { "indent": "indent" }
		},
		{
			"beforeText": "^\\s*(?:return|throw).*?\\s*$",
			"action": { "indent": "outdent" }
		},
		{
			"beforeText": "^\\s*(?:break|continue)\\s*$",
			"action": { "indent": "outdent" }
		}
  ]
}
